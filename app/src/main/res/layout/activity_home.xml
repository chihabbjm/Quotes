<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    android:orientation="vertical"
    tools:context="com.app.quotes.quotes.Home">


    <com.victor.loading.rotate.RotateLoading
        android:id="@+id/rotateloading"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        app:loading_color="#8284b1"
        app:loading_speed="30"
        app:loading_width="5dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/popcorn"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/Category"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/Category"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/title_4"
        android:text="@string/category_text"
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/Random"
        android:layout_centerHorizontal="true"
        android:onClick="logcat"
        />

    <Button
        android:id="@+id/Settings"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/title_5"
        android:text="@string/Settings_text"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="15dp"
        android:onClick="logset"
        android:layout_below="@+id/Favourite"
        android:layout_alignStart="@+id/Favourite" />

    <Button
        android:id="@+id/Favourite"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/title_3"
        android:text="@string/Favourite_text"
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:fontFamily="sans-serif-condensed"
        android:onClick="logfav"
        android:layout_below="@+id/Random"
        android:layout_alignStart="@+id/Random"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/Random"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/title_1"
        android:text="@string/random_text"
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:fontFamily="sans-serif-condensed"
        android:onClick="ran"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Category" />

    <TextView
        android:id="@+id/addpost"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/admin_panel"
        android:onClick="AddPost" />




</RelativeLayout>
