<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="16dp"  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cradview3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="some Title here " />

        </LinearLayout>


        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cradview2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Some Description Here" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@color/cradview1"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/like_nbr"
                android:layout_width="30dp"
                android:layout_height="match_parent"

                 />

            <Button
                android:id="@+id/like"
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:background="@mipmap/like"
                android:onClick="like_button"

                />

            <Button
                android:id="@+id/save"
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="230dp"
                android:background="@mipmap/download"
                android:onClick="save"
                />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>