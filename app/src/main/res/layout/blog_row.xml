<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="340dp"
    android:layout_height="345dp"
    android:background="#143A52"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="25dp"
    android:layout_marginBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/view_group"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView
            android:id="@+id/post_image"
            android:layout_width="283dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="0.31"
            android:scaleType="fitXY" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.44">


            <TextView
                android:id="@+id/post_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Some Description Here"
                android:textColorHint="#456299"
                android:textSize="12dp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:background="@mipmap/like"
                android:gravity="center_horizontal"
                android:onClick="like_button" />

            <Button
                android:id="@+id/favourite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="85dp"
                android:background="@mipmap/favourite"
                android:gravity="center"
                android:onClick="favourite" />

            <Button
                android:id="@+id/save"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="85dp"
                android:background="@mipmap/downlaod"
                android:gravity="center_horizontal"
                android:onClick="save" />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>