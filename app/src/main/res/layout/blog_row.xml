<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="345dp"
    android:layout_gravity="center"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:background="#143A52"
    android:gravity="center"
    app:cardBackgroundColor="#dcddde"
    app:cardCornerRadius="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="0.51"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="left"

            android:gravity="center"
            android:hint="Some Description Here"
            android:textColorHint="#456299"
            android:textSize="15dp"
            card_view:layout_editor_absoluteX="78dp"
            card_view:layout_editor_absoluteY="408dp" />


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/line_group"
            android:weightSum="1"
            card_view:layout_editor_absoluteX="-5dp"
            card_view:layout_editor_absoluteY="317dp"
            android:layout_weight="0.83">

            <Button
                android:id="@+id/like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:background="@mipmap/like"
                android:gravity="center_horizontal"
                android:onClick="like_button" />

            <Button
                android:id="@+id/favourite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="95dp"
                android:background="@mipmap/favourite"
                android:gravity="center"
                android:onClick="favourite" />

            <Button
                android:id="@+id/save"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="85dp"
                android:layout_weight="0.05"
                android:background="@mipmap/downlaod"
                android:gravity="center_horizontal"
                android:onClick="save" />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>